<div class="bg_cover">


	<div class="box_sign_in">

		<h2>Log in</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true, class: 'form-control', label: false, placeholder: 'Email' %>
		    <%= f.input :password, required: false, class: 'form-control', label: false, placeholder: 'Password' %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Log in", class: 'btn btn-purple btn-full'  %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>


</div>




<style>
	.custom_navbar {
		display: none
	}

	.footer  {
		display: none
	}
</style>