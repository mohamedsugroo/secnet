<div class="bg_cover" style="background-image: url('https://images.pexels.com/photos/34729/pexels-photo.jpg?cs=srgb&dl=bus-cars-crosswalk-34729.jpg&fm=jpg')">

	<div class="box_sign_in">
		<h2>Forgot your password?</h2>

		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :email, required: true, autofocus: true %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Send me reset password instructions", class: 'purple' %>
		  </div>
		<% end %>
		
		<%= render "devise/shared/links" %>

	</div>
</div>


<style>
	.custom_navbar {
		display: none
	}

	.footer  {
		display: none
	}
</style>