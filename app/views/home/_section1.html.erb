					<!-- <input type="text" class="form-control form-control-lg" placeholder="Location ...."> -->
					<%= f.text_field :location, class:"form-control form-control-lg", placeholder:"Location ...." %>


				  <div class="input-group-append">
				    <%= f.submit 'Search', class:"btn home_search_btn" %>
				  </div>
				</div>
	
				<% end %>

			</div>
		</div>
		
</div>