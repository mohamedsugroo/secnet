<%= form_for(contractor) do |f| %>
  <% if contractor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contractor.errors.count, "error") %> prohibited this contractor from being saved:</h2>

      <ul>
      <% contractor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="row">
    <div class="col">

      <div class="field">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>

      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>


      <div class="field">
        <%= f.label :gender %>
        <%= f.text_field :gender %>
      </div>

      <div class="field">
        <%= f.label :dob %>
        <%= f.text_field :dob, class: "datepicker" %>
      </div>

      <div class="field">
        <%= f.label :firstline_address %>
        <%= f.text_field :firstline_address %>
      </div>

      <div class="field">
        <%= f.label :postcode %>
        <%= f.text_field :postcode %>
      </div>

      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :county %>
        <%= f.text_field :county %>
      </div>

      <div class="field">
        <%= f.label :country %>
        <%= f.text_field :country %>
      </div>
    </div>


    <div class="col">
      <div class="field">
        <%= f.label :mobile %>
        <%= f.text_field :mobile %>
      </div>

      <div class="field">
        <%= f.label :utr %>
        <%= f.text_field :utr %>
      </div>

      <div class="field">
        <%= f.label :contracts_id %>
        <%= f.text_field :contracts_id %>
      </div>

      <div class="field">
        <%= f.label :right_to_work_uk %>
        <%= f.check_box :right_to_work_uk %>
      </div>

      <div class="field">
        <%= f.label :preferred_hourly_rate %>
        <%= f.number_field :preferred_hourly_rate %>
      </div>

      <div class="field">
        <label> Cover Letter (Optional)</label>
        <%= f.cktext_area :bio %>
      </div>


      <div class="actions">
        <%= f.submit "Create Profile" ,class: "btn-purple" %>
      </div>


    </div>


  </div>








<% end %>
